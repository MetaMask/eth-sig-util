{
  "name": "eth-sig-util",
  "version": "3.0.1",
  "description": "A few useful functions for signing ethereum data",
  "keywords": [
    "ethereum",
    "signature"
  ],
  "homepage": "https://github.com/MetaMask/eth-sig-util#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/eth-sig-util/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/eth-sig-util.git"
  },
  "license": "ISC",
  "author": "Dan Finlay",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "setup": "yarn install && yarn allow-scripts",
    "build": "tsc --project ./tsconfig.prod.json && tsc --project ./tsconfig.test.json",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:json": "prettier '**/*.json' --ignore-path .gitignore",
    "lint": "yarn lint:eslint && yarn lint:json --check",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:json --write",
    "test": "yarn build && node test/index.js",
    "test:browser": "yarn build && airtap test/index.js",
    "prepublishOnly": "yarn build"
  },
  "resolutions": {
    "airtap/engine.io-client/xmlhttprequest-ssl": "^1.6.2"
  },
  "dependencies": {
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^5.2.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^1.0.6",
    "@metamask/auto-changelog": "^2.4.0",
    "@metamask/eslint-config": "^7.0.1",
    "@metamask/eslint-config-nodejs": "^7.0.0",
    "@metamask/eslint-config-typescript": "^7.0.1",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "airtap": "4.0.1",
    "airtap-system": "^0.0.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "tape": "^4.9.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "core-js": false,
      "registry-js": false,
      "win-version-info": false,
      "keccak": true,
      "secp256k1": true
    }
  }
}
